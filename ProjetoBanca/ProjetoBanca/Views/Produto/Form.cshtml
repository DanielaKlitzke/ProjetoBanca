
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro de Produtos</title>
</head>
<body>
    <div>
        <form action="/Produto/Adiciona" method="post">
            <label for="codigo">Código</label>
            <input id="codigo" name="produto.CodigoProduto" />

            <label for="nome">Nome</label>
            <input id="nome" name="produto.NomeProduto" />

            <label for="valor">Valor</label>
            <input id="valor" name="produto.ValorProduto" />

            <label for="descricao">Descrição</label>
            <input id="descricao" name="produto.DescricaoProduto" />

            <label for="unidadeMedida">Unidade de Medida</label>
            <select id="unidadeMedida" name="produto.IdUnidadeMedida">
                    @foreach (var unidade in ViewBag.UnidadeMedidas)
                    {
                        <option value="@unidade.IdUnidadeMedida">unidade.TipoUnidadeMedida</option>
                    }
            </select>

            <label for="medida">Medida</label>
            <input id="medida" name="produto.Medida" />

            <label for="Categoria">Categoria</label>
            <select id="categoria" name="produto.IdCategoria">
                @foreach (var categoria in ViewBag.Categorias)
                {
                    <option value="@categoria.IdCategoria">@categoria.TipoCategoria</option>
                }
            </select>

            <label for="ativo">Ativo</label>
            <input id="ativo" name="produto.AtivoNaoAtivo" />

            <input type="submit" value="Cadastrar" />
        </form>
    </div>
</body>
</html>
