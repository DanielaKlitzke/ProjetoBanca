
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Pessoas</title>
</head>
<body>
    <div> 
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>CPf ou CNPJ</th>
                    <th>RG</th>
                    <th>Sexo</th>
                    <th>Endereço</th>
                    <th>Bairro</th>
                    <th>Numero</th>
                    <th>Complemento</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th>CEP</th>
                    <th>Telefone</th>
                    <th>Data de Nascimento</th>
                    <th>Email</th>
                    <th>Tipo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pessoa in ViewBag.Pessoa)
                    {
                        <tr>
                            <td>@pessoa.IdPessoa</td>
                            <td>@pessoa.Nome</td>
                            <td>@pessoa.CpfOuCnpj</td>
                            <td>@pessoa.Rg</td>
                            <td>@pessoa.Sexo</td>
                            <td>@pessoa.Endereco</td>
                            <td>@pessoa.Bairro</td>
                            <td>@pessoa.NumeroResidencial</td>
                            <td>@pessoa.Complemento</td>
                            <td>@pessoa.Cidade</td>
                            <td>@pessoa.Estado</td>
                            <td>@pessoa.Telefone</td>
                            <td>@pessoa.DataNascimento</td>
                            <td>@pessoa.Email</td>
                            <td>@pessoa.TipoPessoa</td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</body>
</html>
